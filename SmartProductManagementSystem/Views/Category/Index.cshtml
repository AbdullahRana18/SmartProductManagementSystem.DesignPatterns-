@model IEnumerable<SmartProductManagementSystem.Models.Category>

@{
    ViewData["Title"] = "Category Management";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark mb-1">Category Management</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Categories</li>
                </ol>
            </nav>
        </div>

        <a asp-action="Create" class="btn btn-success shadow-sm d-flex align-items-center gap-2 px-4 rounded-3">
            <i class="bi bi-folder-plus"></i> <span>Add Category</span>
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase text-muted small fw-bold" style="width: 100px;">ID</th>
                        <th class="py-3 text-uppercase text-muted small fw-bold">Category Name</th>
                        <th class="pe-4 py-3 text-end text-uppercase text-muted small fw-bold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-light text-secondary border">#@item.Id</span>
                            </td>
                            <td>
                                <div class="fw-bold text-dark d-flex align-items-center gap-2">
                                    <i class="bi bi-folder2-open text-warning"></i> @item.Name
                                </div>
                            </td>

                            <td class="pe-4 text-end">
                                <div class="d-flex justify-content-end gap-2">

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-primary-soft" title="Edit">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>

                                    <button type="button" class="btn btn-sm btn-icon btn-danger-soft" onclick="confirmDelete(@item.Id)" title="Delete">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>

                                    <form id="delete-form-@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:none;"></form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="text-muted mb-2"><i class="bi bi-folder-x display-4 text-light-emphasis"></i></div>
                    <h5 class="fw-bold text-muted">No Categories Found</h5>
                    <a asp-action="Create" class="btn btn-success btn-sm mt-2">Create First Category</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    /* Soft Buttons */
    .btn-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
    }

    .btn-primary-soft {
        background-color: #e9f2ff;
        color: #0d6efd;
    }

        .btn-primary-soft:hover {
            background-color: #0d6efd;
            color: white;
        }

    .btn-danger-soft {
        background-color: #ffeaea;
        color: #dc3545;
    }

        .btn-danger-soft:hover {
            background-color: #dc3545;
            color: white;
        }

    /* Table Header */
    .table thead th {
        border-bottom: 2px solid #edf2f9;
        background-color: #f8f9fa;
    }
</style>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Delete Category?',
            text: "This might affect products in this category!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('delete-form-' + id).submit();
            }
        })
    }
</script>