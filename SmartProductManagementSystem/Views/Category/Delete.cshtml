@model SmartProductManagementSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-3 py-md-5">
    <div class="row justify-content-center">
        <div class="col-11 col-sm-10 col-md-6 col-lg-5">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-body p-4 p-md-5 text-center">

                    <div class="icon-circle bg-danger-subtle mx-auto mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                    </div>

                    <h3 class="fw-bold text-dark mb-2 fs-4 fs-md-3">Delete Category?</h3>
                    <p class="text-muted mb-4 small px-2">
                        Are you sure you want to delete this category? <br class="d-none d-sm-block">
                        This might affect products linked to it.
                    </p>

                    <div class="category-summary bg-light border rounded-3 p-3 mb-4 text-start">
                        <div class="d-flex flex-column flex-sm-row justify-content-between border-bottom pb-2 mb-2 gap-1">
                            <span class="text-uppercase text-muted extra-small fw-bold">Category Name</span>
                            <span class="fw-bold text-dark text-truncate">@Model.Name</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-uppercase text-muted extra-small fw-bold">System ID</span>
                            <span class="badge bg-white text-dark border px-2 py-1">#@Model.Id</span>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg rounded-3 shadow-sm fw-bold fs-6 py-2 py-md-3">
                                <i class="bi bi-trash me-2"></i> Yes, Delete It
                            </button>

                            <a asp-action="Index" class="btn btn-light btn-lg rounded-3 text-muted fs-6 py-2 py-md-3 border">
                                No, Keep It
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    /* Danger Icon Circle Responsive */
    .icon-circle {
        width: 65px;
        height: 65px;
        @@media (min-width: 768px) {
            width: 80px;
            height: 80px;
        }

        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fee2e2 !important;
    }

        .icon-circle i {
            font-size: 1.75rem !important;
        }
    @@media (min-width: 768px) {
        .icon-circle i {
            font-size: 2.5rem !important;
        }
    }

    .text-danger {
        color: #dc2626 !important;
    }

    /* Summary Styling */
    .category-summary {
        background-color: #f8f9fa;
        border: 1px dashed #dee2e6 !important;
    }

    .extra-small {
        font-size: 0.7rem;
    }
    @@media (min-width: 768px) {
        .extra-small {
            font-size: 0.75rem;
        }
    }

    /* Buttons */
    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        transition: all 0.2s;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            transform: translateY(-1px);
        }
</style>