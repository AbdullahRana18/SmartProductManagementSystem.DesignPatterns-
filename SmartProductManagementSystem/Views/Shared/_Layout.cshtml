<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartProductManagementSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartProductManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-white bg-white border-bottom shadow-sm mb-3 py-3">
            <div class="container-fluid px-4">

                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Admin" asp-action="Dashboard">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                        <i class="bi bi-box-seam-fill"></i>
                    </div>
                    <span class="text-dark">SPMS</span> <span class="text-muted fw-normal ms-1">| Admin Panel</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-4">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-boxes me-1"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-tags me-1"></i> Categories
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark d-flex align-items-center gap-2" href="#">
                                <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                    <i class="bi bi-person-fill text-secondary"></i>
                                </div>
                                <span>Admin User</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-white mt-auto py-3 shadow-sm-top">
        <div class="container-fluid px-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">

                <div class="mb-2 mb-md-0">
                    <span class="text-muted small">&copy; 2025 <strong>SPMS</strong>. All rights reserved.</span>
                    <span class="mx-2 text-muted small">|</span>
                    @* <span class="badge bg-light text-secondary border rounded-pill px-2">v1.0.0</span> *@
                </div>

                <div class="d-flex align-items-center gap-3">
                    <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted small footer-link">
                        Privacy Policy
                    </a>
                    <span class="text-muted small">&bull;</span>

                    <span class="text-muted small">
                        Developed by <span class="fw-bold text-primary">Abdullah Rana</span> & <span class="fw-bold text-primary">Muhammad Muneeb</span>
                    </span>

                    <div class="ms-2 border-start ps-3">
                        <a href="#" class="text-secondary me-2 footer-icon"><i class="bi bi-github"></i></a>
                        <a href="#" class="text-secondary footer-icon"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <style>
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            /* Agar content kam ho to footer neeche chipka rahe */
        }

        .footer-link:hover {
            color: #0d6efd !important; /* Primary Blue color on hover */
            text-decoration: underline !important;
        }

        .footer-icon:hover {
            color: #0d6efd !important;
            transform: scale(1.1);
            display: inline-block;
            transition: all 0.2s;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Check if TempData has the notification
        document.addEventListener("DOMContentLoaded", function () {
            var message = '@TempData["StockNotification"]';
            if (message && message !== "") {
                Swal.fire({
                    title: 'Stock Updated!',
                    text: message,
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
</body>
</html>
