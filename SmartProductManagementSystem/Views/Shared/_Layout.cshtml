<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartProductManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-white bg-white border-bottom shadow-sm mb-3 py-2 py-md-3">
            <div class="container-fluid px-3 px-md-4">

                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Admin" asp-action="Dashboard">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                        <i class="bi bi-box-seam-fill small"></i>
                    </div>
                    <span class="fs-5">SPMS</span>
                    <span class="text-muted fw-normal ms-1 d-none d-sm-inline">| Admin</span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-lg-4 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-2" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-2" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-boxes me-1"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-medium py-2" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-tags me-1"></i> Categories
                            </a>
                        </li>
                    </ul>

                    <hr class="d-lg-none text-muted">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="nav-link text-dark d-flex align-items-center gap-2">
                                <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                    <i class="bi bi-person-fill text-secondary"></i>
                                </div>
                                <span class="small fw-bold">Admin User</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-white mt-auto py-4 py-md-3 shadow-sm-top">
        <div class="container-fluid px-4">
            <div class="row align-items-center text-center text-md-start">

                <div class="col-12 col-md-4 mb-3 mb-md-0">
                    <span class="text-muted small">&copy; 2025 <strong>SPMS</strong>. All rights reserved.</span>
                </div>

                <div class="col-12 col-md-5 mb-3 mb-md-0">
                    <span class="text-muted small">
                        Developed by <span class="fw-bold text-primary">Abdullah Rana</span> & <span class="fw-bold text-primary">M. Muneeb</span>
                    </span>
                </div>

                <div class="col-12 col-md-3">
                    <div class="d-flex justify-content-center justify-content-md-end align-items-center gap-3">
                        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted small footer-link">Privacy</a>
                        <div class="border-start ps-3 d-flex gap-2">
                            <a href="#" class="text-secondary footer-icon"><i class="bi bi-github"></i></a>
                            <a href="#" class="text-secondary footer-icon"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    <style>
        /* Sticky Footer Fix */
        html, body {
            height: 100%;
        }

        .footer {
            /* Position absolute hata diya taake responsive row ke sath height manage ho sake */
            background-color: #fff;
        }

        .footer-link:hover {
            color: #0d6efd !important;
            text-decoration: underline !important;
        }

        .footer-icon {
            font-size: 1.1rem;
            transition: all 0.2s;
            display: inline-block;
        }

            .footer-icon:hover {
                color: #0d6efd !important;
                transform: translateY(-2px);
            }

        /* Navbar active state ya spacing ke liye */
        .nav-link {
            transition: color 0.2s;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var message = '@TempData["StockNotification"]';
            if (message && message !== "") {
                Swal.fire({
                    title: 'Stock Updated!',
                    text: message,
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });
            }
        });
    </script>
</body>
</html>