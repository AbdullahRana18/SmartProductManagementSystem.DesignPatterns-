@{
    ViewData["Title"] = "System Configuration";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary text-white rounded-3 p-3 me-3 shadow-sm">
                    <i class="bi bi-gear-wide-connected fs-3"></i>
                </div>
                <div>
                    <h3 class="fw-bold text-dark mb-1">System Configuration</h3>
                    <p class="text-muted mb-0">Manage global application settings (Singleton Pattern)</p>
                </div>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom py-3">
                    <h6 class="fw-bold text-primary mb-0 text-uppercase ls-1">General Settings</h6>
                </div>

                <div class="card-body p-4">

                    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-3">
                        <div>
                            <h6 class="fw-bold text-dark mb-1">Application Name</h6>
                            <small class="text-muted">Global display name for the panel</small>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6">@ViewBag.AppName</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-3">
                        <div>
                            <h6 class="fw-bold text-dark mb-1">Default Currency</h6>
                            <small class="text-muted">Base currency used for transactions</small>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-success-subtle text-success border border-success px-3 py-2 fs-6">
                                <i class="bi bi-cash-stack me-1"></i> @ViewBag.Currency
                            </span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center pt-2">
                        <div>
                            <h6 class="fw-bold text-dark mb-1">Maintenance Mode</h6>
                            <small class="text-muted">Disable system access for users</small>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="maintenanceSwitch" disabled>
                            <label class="form-check-label small text-muted" for="maintenanceSwitch">Disabled</label>
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-light py-3 border-0 text-end">
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-dark btn-sm rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <div class="alert alert-info d-flex align-items-center mt-4 shadow-sm border-0" role="alert">
                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Developer Note:</strong> These values are loaded from a <u>Singleton Instance</u>. This ensures only one configuration object exists in memory.
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    .ls-1 {
        letter-spacing: 1px;
    }

    /* Toggle Switch Size */
    .form-check-input {
        width: 3em;
        height: 1.5em;
    }
</style>