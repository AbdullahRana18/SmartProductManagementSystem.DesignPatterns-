@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark mb-1">Admin Dashboard</h2>
            <p class="text-muted mb-0">Overview of your store's performance.</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-white text-dark border px-3 py-2 rounded-pill shadow-sm">
                <i class="bi bi-calendar-event me-2 text-primary"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
            </span>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted small mb-1">Total Products</p>
                            <h2 class="fw-bold text-dark mb-0">@ViewBag.TotalProducts</h2>
                        </div>
                        <div class="icon-box bg-primary-subtle text-primary">
                            <i class="bi bi-box-seam-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                            <i class="bi bi-check-circle-fill me-1"></i> Active
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted small mb-1">Total Categories</p>
                            <h2 class="fw-bold text-dark mb-0">@ViewBag.TotalCategories</h2>
                        </div>
                        <div class="icon-box bg-success-subtle text-success">
                            <i class="bi bi-tags-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill">
                            <i class="bi bi-folder-fill me-1"></i> Organized
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted small mb-1">Low Stock</p>
                            <h2 class="fw-bold text-dark mb-0">@ViewBag.LowStockProducts</h2>
                        </div>
                        <div class="icon-box bg-danger-subtle text-danger">
                            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">
                            <i class="bi bi-bell-fill me-1"></i> Restock Needed
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold text-dark mb-4">Quick Management</h5>
    <div class="row g-3">
        <div class="col-md-3">
            <a asp-controller="Product" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="action-icon bg-primary text-white shadow-sm">
                        <i class="bi bi-boxes"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold text-dark mb-1">Products</h6>
                        <small class="text-muted d-block">View Inventory</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Category" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="action-icon bg-success text-white shadow-sm">
                        <i class="bi bi-bookmarks"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold text-dark mb-1">Categories</h6>
                        <small class="text-muted d-block">Manage Structure</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Product" asp-action="Create" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="action-icon bg-dark text-white shadow-sm">
                        <i class="bi bi-plus-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold text-dark mb-1">Add New</h6>
                        <small class="text-muted d-block">Create Item</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-4 d-flex align-items-center gap-3">
                    <div class="action-icon bg-secondary text-white shadow-sm">
                        <i class="bi bi-gear-wide-connected"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold text-dark mb-1">Settings</h6>
                        <small class="text-muted d-block">Configuration</small>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    /* Stats Card Styling */
    .stat-card {
        border-radius: 16px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
        }

    /* Icon Boxes for Stats */
    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Action Card Styling */
    .action-card {
        border-radius: 16px;
        transition: all 0.2s ease;
    }

        .action-card:hover {
            background-color: #ffffff;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.06) !important;
        }

    /* Action Icons */
    .action-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px; /* Slightly rounded square for modern look */
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
    }

    /* Professional Background Colors */
    .bg-primary-subtle {
        background-color: #ecf2ff !important;
        color: #3d5afe !important;
    }

    .bg-success-subtle {
        background-color: #e8f5e9 !important;
        color: #2e7d32 !important;
    }

    .bg-danger-subtle {
        background-color: #ffebee !important;
        color: #c62828 !important;
    }
</style>