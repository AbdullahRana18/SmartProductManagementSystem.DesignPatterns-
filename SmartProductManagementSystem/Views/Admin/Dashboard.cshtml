<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">📊 Admin Command Center</h2>
        <span class="badge bg-secondary p-2">Welcome Back, Admin</span>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white h-100 transition-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-box-seam fs-1 mb-2"></i>
                    <h5 class="card-title opacity-75">Total Products</h5>
                    <h2 class="display-4 fw-bold">@ViewBag.TotalProducts</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white h-100 transition-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-tags fs-1 mb-2"></i>
                    <h5 class="card-title opacity-75">Total Categories</h5>
                    <h2 class="display-4 fw-bold">@ViewBag.TotalCategories</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-danger text-white h-100 transition-hover">
                <div class="card-body text-center py-4">
                    <i class="bi bi-exclamation-triangle fs-1 mb-2"></i>
                    <h5 class="card-title opacity-75">Low Stock Items</h5>
                    <h2 class="display-4 fw-bold">@ViewBag.LowStockProducts</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-primary">🚀 Quick Actions</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary w-100 py-3 shadow-sm">
                        <i class="bi bi-list-ul d-block fs-4 mb-1"></i> Manage Products
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success w-100 py-3 shadow-sm">
                        <i class="bi bi-folder-plus d-block fs-4 mb-1"></i> Manage Categories
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-outline-dark w-100 py-3 shadow-sm">
                        <i class="bi bi-plus-circle d-block fs-4 mb-1"></i> Add New Product
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-info w-100 py-3 shadow-sm text-dark">
                        <i class="bi bi-gear d-block fs-4 mb-1"></i> System Settings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }

    .card {
        border-radius: 15px;
    }

    .btn {
        border-radius: 10px;
        font-weight: 500;
    }
</style>