@model IEnumerable<SmartProductManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-3 py-md-4 px-3 px-md-5">

    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center mb-4 mb-md-5 gap-3 text-center text-sm-start">
        <div>
            <h2 class="fw-bold text-dark mb-1 fs-3 fs-md-2">Admin Dashboard</h2>
            <p class="text-muted mb-0 small">Overview of your store's performance.</p>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-white text-dark border px-3 py-2 rounded-pill shadow-sm small">
                <i class="bi bi-calendar-event me-2 text-primary"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
            </span>
        </div>
    </div>

    <div class="row g-3 g-md-4 mb-5">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-3 p-md-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted extra-small mb-1">Total Products</p>
                            <h2 class="fw-bold text-dark mb-0 fs-3">@ViewBag.TotalProducts</h2>
                        </div>
                        <div class="icon-box bg-primary-subtle text-primary">
                            <i class="bi bi-box-seam-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill extra-small">
                            <i class="bi bi-check-circle-fill me-1"></i> Active
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-3 p-md-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted extra-small mb-1">Total Categories</p>
                            <h2 class="fw-bold text-dark mb-0 fs-3">@ViewBag.TotalCategories</h2>
                        </div>
                        <div class="icon-box bg-success-subtle text-success">
                            <i class="bi bi-tags-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill extra-small">
                            <i class="bi bi-folder-fill me-1"></i> Organized
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-3 p-md-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-uppercase fw-semibold text-muted extra-small mb-1">Low Stock</p>
                            <h2 class="fw-bold text-dark mb-0 fs-3 text-danger">@ViewBag.LowStockProducts</h2>
                        </div>
                        <div class="icon-box bg-danger-subtle text-danger">
                            <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill extra-small">
                            <i class="bi bi-bell-fill me-1"></i> Restock Needed
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold text-dark mb-4">Quick Management</h5>

    <div class="row g-3">
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-3 p-md-4 text-center text-md-start">
                    <div class="d-flex flex-column flex-md-row align-items-center gap-2 gap-md-3">
                        <div class="action-icon bg-primary text-white shadow-sm">
                            <i class="bi bi-boxes"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-0 mb-md-1 small">Products</h6>
                            <small class="text-muted d-none d-md-block">View Inventory</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-3 p-md-4 text-center text-md-start">
                    <div class="d-flex flex-column flex-md-row align-items-center gap-2 gap-md-3">
                        <div class="action-icon bg-success text-white shadow-sm">
                            <i class="bi bi-bookmarks"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-0 mb-md-1 small">Categories</h6>
                            <small class="text-muted d-none d-md-block">Manage Structure</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Create" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-3 p-md-4 text-center text-md-start">
                    <div class="d-flex flex-column flex-md-row align-items-center gap-2 gap-md-3">
                        <div class="action-icon bg-dark text-white shadow-sm">
                            <i class="bi bi-plus-lg"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-0 mb-md-1 small">Add New</h6>
                            <small class="text-muted d-none d-md-block">Create Item</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="Admin" asp-action="Index" class="card border-0 shadow-sm action-card text-decoration-none h-100">
                <div class="card-body p-3 p-md-4 text-center text-md-start">
                    <div class="d-flex flex-column flex-md-row align-items-center gap-2 gap-md-3">
                        <div class="action-icon bg-secondary text-white shadow-sm">
                            <i class="bi bi-gear-wide-connected"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-dark mb-0 mb-md-1 small">Settings</h6>
                            <small class="text-muted d-none d-md-block">Configuration</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    /* Stats Card Styling */
    .stat-card {
        border-radius: 16px;
        transition: transform 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
        }

    .icon-box {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @@media (min-width: 768px) {
        .icon-box {
            width: 50px;
            height: 50px;
        }
    }

    /* Action Card Styling */
    .action-card {
        border-radius: 16px;
        transition: all 0.2s ease;
    }

        .action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.06) !important;
        }

    .action-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    @@media (min-width: 768px) {
        .action-icon {
            width: 48px;
            height: 48px;
            font-size: 1.4rem;
        }
    }

    /* Professional Background Colors */
    .bg-primary-subtle {
        background-color: #ecf2ff !important;
        color: #3d5afe !important;
    }

    .bg-success-subtle {
        background-color: #e8f5e9 !important;
        color: #2e7d32 !important;
    }

    .bg-danger-subtle {
        background-color: #ffebee !important;
        color: #c62828 !important;
    }

    .extra-small {
        font-size: 0.65rem;
    }

    @@media (min-width: 768px) {
        .extra-small {
            font-size: 0.75rem;
        }
    }
</style>