@model IEnumerable<SmartProductManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Product Inventory";
}

<div class="container-fluid py-3 py-md-4 px-3 px-md-5">

    <div class="row align-items-center mb-4 g-3">
        <div class="col-12 col-md-6 text-center text-md-start">
            <h3 class="fw-bold text-dark mb-1 fs-4 fs-md-3">Product Inventory</h3>
            <nav aria-label="breadcrumb" class="d-flex justify-content-center justify-content-md-start">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Products</li>
                </ol>
            </nav>
        </div>

        <div class="col-12 col-md-6">
            <div class="d-flex flex-column flex-sm-row justify-content-md-end gap-2">
                <a asp-action="Undo" class="btn btn-light border shadow-sm text-dark d-flex align-items-center justify-content-center gap-2 px-3 rounded-3 py-2 order-2 order-sm-1">
                    <i class="bi bi-arrow-counterclockwise"></i> <span>Undo</span>
                </a>
                <a asp-action="Create" class="btn btn-primary shadow-sm d-flex align-items-center justify-content-center gap-2 px-4 rounded-3 py-2 order-1 order-sm-2">
                    <i class="bi bi-plus-lg"></i> <span>Add Product</span>
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.Notification != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 border-start border-success border-4 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill text-success fs-5 me-2"></i>
                <div class="small">@ViewBag.Notification</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-nowrap">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-muted small fw-bold">PRODUCT</th>
                            <th class="py-3 text-muted small fw-bold">PRICE</th>
                            <th class="py-3 text-muted small fw-bold">STOCK</th>
                            <th class="py-3 text-muted small fw-bold d-none d-lg-table-cell">TYPE</th>
                            <th class="py-3 text-muted small fw-bold d-none d-md-table-cell">CATEGORY</th>
                            <th class="pe-4 py-3 text-end text-muted small fw-bold">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    <div class="d-flex flex-column">
                                        <span>@item.Name</span>
                                        <small class="text-muted d-md-none fw-normal">@item.Category?.Name</small>
                                    </div>
                                </td>
                                <td class="fw-semibold">@item.Price.ToString("N0")</td>

                                <td>
                                    @if (item.StockQuantity == 0)
                                    {
                                        <span class="badge bg-danger text-white rounded-pill px-2 small shadow-sm">Out</span>
                                    }
                                    else if (item.StockQuantity < 5)
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-2 small">Low: @item.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-2 small">@item.StockQuantity</span>
                                    }
                                </td>

                                <td class="text-muted d-none d-lg-table-cell">@item.ProductType</td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-light text-dark border">@item.Category?.Name</span>
                                </td>

                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-1 gap-md-2">
                                        <a asp-action="ApplyDiscount" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-warning-soft" title="Discount"><i class="bi bi-tag-fill"></i></a>
                                        <a asp-action="ConvertPrice" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-info-soft" title="Convert"><i class="bi bi-currency-exchange"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-primary-soft" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                                        <button type="button" class="btn btn-sm btn-icon btn-danger-soft" onclick="confirmDelete(@item.Id)" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                        <form id="delete-form-@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:none;"></form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 px-3">
                    <h5 class="fw-bold text-muted">No Products Found</h5>
                    <p class="small text-muted">Add some products to your inventory.</p>
                    <a asp-action="Create" class="btn btn-primary btn-sm mt-2 px-4">Add New</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
    }

    /* Action Buttons Style */
    .btn-icon {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        border: none;
    }

    @@media (min-width: 768px) {
        .btn-icon {
            width: 34px;
            height: 34px;
        }
    }

    .btn-primary-soft {
        background-color: #e9f2ff;
        color: #0d6efd;
    }

        .btn-primary-soft:hover {
            background-color: #0d6efd;
            color: white;
        }

    .btn-danger-soft {
        background-color: #ffeaea;
        color: #dc3545;
    }

        .btn-danger-soft:hover {
            background-color: #dc3545;
            color: white;
        }

    .btn-warning-soft {
        background-color: #fff8e1;
        color: #ffc107;
    }

        .btn-warning-soft:hover {
            background-color: #ffc107;
            color: black;
        }

    .btn-info-soft {
        background-color: #e0f7fa;
        color: #0dcaf0;
    }

        .btn-info-soft:hover {
            background-color: #0dcaf0;
            color: white;
        }

    /* Table Padding Fix */
    .table > :not(caption) > * > * {
        padding: 0.75rem 0.5rem;
    }

    @@media (min-width: 768px) {
        .table > :not(caption) > * > * {
            padding: 1rem 0.75rem;
        }
    }
</style>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Delete this product?',
            text: "You won't be able to undo this directly!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('delete-form-' + id).submit();
            }
        })
    }

    // Ctrl+Z for Undo
    document.addEventListener('keydown', function(event) {
        if ((event.ctrlKey || event.metaKey) && event.key === 'z') {
            event.preventDefault();
            window.location.href = '@Url.Action("Undo", "Product")';
        }
    });
</script>