@model SmartProductManagementSystem.Models.Product

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4>🗑️ Delete Product</h4>
        </div>

        <div class="card-body">
            <p class="mb-2">Are you sure you want to delete this product?</p>

            <ul class="list-group mb-3">
                <li class="list-group-item">
                    <strong>Name:</strong> @Model.Name
                </li>
                <li class="list-group-item">
                    <strong>Category:</strong> @Model.Category?.Name
                </li>
                <li class="list-group-item">
                    <strong>Type:</strong> @Model.ProductType
                </li>
                <li class="list-group-item">
                    <strong>Price:</strong> @Model.Price
                </li>
            </ul>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
