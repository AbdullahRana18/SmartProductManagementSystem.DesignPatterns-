<div class="container mt-5">
    <h3>💱 Convert Price</h3>

    <form asp-action="ConvertPrice" method="get">
        <input type="hidden" name="id" value="@Model.Id" />
        <select class="form-select mb-3" name="currency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="PKR">PKR</option>
        </select>
        <button class="btn btn-primary">Convert</button>
    </form>

    <p class="mt-3">
        <strong>@ViewBag.ProductName</strong><br />
        Original Price: @ViewBag.OriginalPrice PKR <br />
        Converted Price: @ViewBag.ConvertedPrice @ViewBag.Currency
    </p>
</div>
